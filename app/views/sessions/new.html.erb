<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white" >
          <h1 class="text-center">Sign In!</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: sign_in_path do |form| %>
            <div class="form-group mb-2">
              <%= form.label :email, class: "font-weight-bold" %>
              <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="form-group mb-4">
              <%= form.label :password, class: "font-weight-bold" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
            <div class="card">
              <%= form.submit "Sign Ip", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
