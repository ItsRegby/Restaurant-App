<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="custom-card">
        <div class="custom-card bg-primary text-white">
          <h2 class="text-center">Create a review</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @review, url: reviews_path, method: :post) do |form| %>
            <% if @review.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% @review.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= form.label :rating, "Rating" %>
              <%= form.select :rating, (1..5), { include_blank: true }, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :review_text, "Response" %>
              <%= form.text_area :review_text, class: "form-control", rows: 5 %>
            </div>
            <div class="text-center">
              <%= form.submit "Create a review", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
