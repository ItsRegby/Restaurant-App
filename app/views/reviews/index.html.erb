<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="custom-card">
        <div class="custom-card bg-primary text-white">
          <h1 class="text-center">User reviews</h1>
        </div>
        <div class="mt-3 text-center">
          <%= link_to "Додати відгук", new_review_path, class: "btn btn-outline-primary" %>
        </div>

        <% @reviews.each do |review| %>
          <div class="review mt-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Response</h5>
                <% user_profile = UserProfile.find_by(user_id: review.user_id) %>
                <p class="card-text"><strong>User:</strong> <%= user_profile.full_name %></p>
                <p class="card-text"><strong>Date:</strong> <%= review.review_date.strftime("%B %d, %Y %H:%M:%S") %></p>
                <p class="card-text"><strong>Rating:</strong> <%= review.rating %></p>
                <p class="card-text"><strong>Response:</strong> <%= review.review_text %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
