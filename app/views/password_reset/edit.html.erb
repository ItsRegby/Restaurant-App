<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white" >
          <h1 class="text-center">Reset your password</h1>
        </div>
        <div class="card-body">
          <%=form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
            <% if form.object.errors.any? %>
              <div class="alert alert-danger">
                <% form.object.errors.full_messages.each do |message| %>
                  <div>
                    <%=message%>
                  </div>
                <% end %>
              </div>
            <% end %>
            <div class="form-group mb-2">
              <%= form.label :password, class: "font-weight-bold" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
            <div class="form-group mb-4">
              <%= form.label :password_confirmation, class: "font-weight-bold" %>
              <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
            </div>

            <div class="card">
              <%= form.submit "Reset Password", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>